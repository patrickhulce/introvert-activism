{
  "private": true,
  "name": "introvert-activism",
  "description": "The production package.json for the published app.",
  "version": "0.1.5",
  "main": "dist-ts/electron/src/main/entry.js",
  "scripts": {
    "build": "yarn build:api && yarn build:frontend",
    "build:api": "tsc",
    "build:frontend": "cd packages/frontend && yarn build",
    "build:watch": "bash ./scripts/build-watch.sh",
    "deploy": "git push -f production HEAD:master",
    "generate-token": "node packages/api/bin/create-jwt.js",
    "start": "cd packages/electron && yarn start",
    "package": "bash ./scripts/package.sh",
    "test": "yarn test:lint",
    "test:lint": "eslint . --ext .ts,.tsx",
    "release": "bash ./scripts/release.sh"
  },
  "repository": "https://github.com/patrickhulce/introvert-activism.git",
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "abort-controller": "^3.0.0",
    "body-parser": "^1.19.0",
    "electron-log": "^4.2.0",
    "electron-updater": "^4.3.1",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "meyda": "^5.0.2",
    "twilio": "^3.45.0",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@material-ui/core": "^4.10.1",
    "@material-ui/icons": "^4.9.1",
    "@types/body-parser": "^1.19.0",
